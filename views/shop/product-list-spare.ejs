<!DOCTYPE html>
<html lang="en">
  <!-- template insertion -->
  <%- include('../includes/iHead.ejs') %>

  <body>
    <!-- template insertion -->
    <%- include('../includes/iNav.ejs') %>

    <main>
      <!-- code from templating engine -->
      <% if (prods.length > 0) { %>

      <div class="grid">
        <!-- code from templating engine -->
        <% prods.forEach(product => { %>

        <article class="card product-item">
          <header class="card__header">
            <!-- code from templating engine -->
            <h1 class="product__title"><%= product.title %></h1>
          </header>
          <div class="card__image">
            <!-- <img
              src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png"
              alt="A Book"
            /> -->
            <img src="/images/book_image.png" alt="A Book" />
          </div>
          <div class="card__content">
            <h2 class="product__price">$<%= product.price %></h2>
            <p class="product__description"><%= product.description %></p>
          </div>
          <div class="card__actions">
            <!-- set dynamic route (from obj. property) -->
            <a href="/products/<%= product._id %>" class="btn">Details</a>
            <!-- nested variables (product) need to be passed to 'include' as a second arg. -->
            <%- include('../includes/iAddToCart.ejs', {product: product}) %>
          </div>
        </article>

        <!-- code from templating engine -->
        <% }) // close 'forEach' loop %>
      </div>

      <%- include('../includes/pagination.ejs', {currentPage: currentPage,
      hasPrevPage: hasPrevPage, hasNextPage: hasNextPage}) %>

      <!-- code from templating engine -->
      <% } else { %>
      <h1>No Products Added!</h1>
      <!-- code from templating engine -->
      <% } // close 'if' statement %>
    </main>
  </body>
</html>
